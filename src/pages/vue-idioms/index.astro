---
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';

const posts = await getCollection('vue-idioms');

---
<MainLayout title="Vue Idioms">
  <h1>Vue Idioms</h1>
  <ul>
    {posts.map(post => (
      <li>
        <a href={`/vue-idioms/${post.slug}`}>
          {post.data.title}
        </a>
      </li>
    ))}
  </ul>
</MainLayout>
