---
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';

const posts = await getCollection('mindset');

---
<MainLayout title="Mindset">
  <h1>Mindset</h1>
  <ul>
    {posts.map(post => (
      <li>
        <a href={`/mindset/${post.slug}`}>
          {post.data.title}
        </a>
      </li>
    ))}
  </ul>
</MainLayout>
